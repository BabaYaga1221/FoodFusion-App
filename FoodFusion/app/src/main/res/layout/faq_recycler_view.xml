<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookListCard"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/qnaListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/qnaQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a question?"
                android:textColor="#0D753D"
                android:padding="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/qnaAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="its a answer."
                android:textColor="#000000"
                android:layout_below="@id/qnaQuestion"
                android:padding="10dp"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>