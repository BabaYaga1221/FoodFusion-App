<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#B8FFD9"
    android:id="@+id/drawerLayoutDemo"
    tools:context=".activity.HomePage">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_action_homepageperson"/>

    <TextView
        android:id="@+id/txtNameDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, to Food Partner"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/txtNumberDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, to Food Partner"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_marginTop="-15dp"
        android:textSize="18sp"/>

</LinearLayout>